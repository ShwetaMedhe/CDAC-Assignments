<?xml version="1.0" encoding="UTF-8"?>

<!-- Version 8 MySQL hiberante-cfg.xml example for Hibernate 5 -->
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://192.168.10.117:3306/dac89?useSSL=false</property>
    <property name="connection.username">dac89</property>
    <property name="connection.password">welcome</property>
    <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
    <property name="connection.pool_size">3</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
    <!-- maping class" / -->
    <mapping resource="MyUser.hbm.xml"/> 
     <mapping resource="product.hbm.xml"/>  
    <!-- <mapping resource="product.hbm.xml"/>
    <mapping resource="user.hbm.xml"/>   -->
  </session-factory>
</hibernate-configuration>